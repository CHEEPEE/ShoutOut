<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/NoActionBar"

    tools:context="com.announcement.schol.infoboard.activities.LoginActivity">

    <android.support.v7.widget.CardView
        android:layout_centerInParent="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="400dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/app_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:src="@drawable/applogo"

                />


            <EditText
                android:id="@+id/field_email"
                android:layout_below="@+id/app_logo"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_background_field"
                android:drawablePadding="15dp"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:hint="Email"
                android:textSize="15dp"
                android:inputType="textEmailAddress"
                android:paddingBottom="7dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:textColor="@color/white"
                android:textColorHint="@color/hintColor"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true"
                />


            <EditText
                android:paddingRight="15dp"
                android:textSize="15dp"
                android:id="@+id/field_password"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/field_email"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:background="@drawable/round_background_field"
                android:drawablePadding="15dp"
                android:drawableStart="@drawable/ic_vpn_key_black_24dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingBottom="7dp"
                android:paddingLeft="15dp"
                android:paddingTop="7dp"
                android:textColorHint="@color/hintColor"
                android:textColor="@color/white" />

            <Button
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_below="@+id/field_password"
                android:background="@drawable/round_background_field"
                android:layout_centerHorizontal="true"
                android:id="@+id/btn_login"
                android:text="LOG in"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                />
            <Button
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_below="@+id/btn_login"
                android:background="@drawable/round_background_field"
                android:layout_centerHorizontal="true"
                android:id="@+id/btn_google_sign"
                android:text="Gmail"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                />




        </RelativeLayout>


    </android.support.v7.widget.CardView>





</RelativeLayout>
