<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- no action Bar -->
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" xmlns:tools="http://schemas.android.com/tools">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:titleTextColor"  tools:targetApi="23">@color/colorAccent</item>
    </style>
    <style name="FacebookLoginButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="MyTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="socialButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">#979797</item>


    </style>


</resources>
